<p id="notice"><%= notice %></p>


    <h1 class="mb-4 mt-5">Resent Uploads</h1>

<table class="table table-striped text-center ">
    <thead class="bg-info text-white">
        <tr>
            <th>Email.Id</th>
            <th>Title</th>
            <th>Description</th>
            <th>Created on</th>
            <th>Updated on</th>
            <th>Show</th>
        </tr>
    </thead>

    <tbody class="mb-1 bg-light">
        <% @albums.each do |album| %>
        <tr>
            <td><%= album.user.email %></td>
            <td><%= album.title %></td>
            <td><%= album.discription %></td>
            <td><%= album.created_at.to_s.split(' ')[0] %></td>
            <td><%= album.updated_at.to_s.split(' ')[0] %></td>
            <td><%= link_to 'Show',album, class:'btn btn-success btn-sm' %></td>



          </tr>
        <% end %>
    </tbody>
</table>

<%= paginate @albums%>
