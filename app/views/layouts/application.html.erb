<!DOCTYPE html>
<html>

<head>
    <title>Gallery</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>

  <div class="navbar navbar-expand-lg bg-dark navbar-dark  ">
  <div class="container">
    <%= link_to "Gallery", root_path, class: 'navbar-brand' %>

    <ul class="navbar-nav mr-auto">

      <li class="nav-item">
        <%= link_to "Home", root_path, class: 'nav-link' %>
      </li>
      <li class="nav-item">
        <%= link_to "Recent", recent_path, class: 'nav-link' %>
      </li>

      <% if user_signed_in? %>



      <li class="nav-item">
        <%= link_to "My Albums",albums_path, class: 'nav-link' %>
      </li>


      <li class="nav-item">
        <%= link_to "Upload", new_album_path, class: 'btn btn-primary ' %>
      </li>


      <% end %>
    </ul>

    <ul class="navbar-nav">

        <% if user_signed_in? %>

        <li class="nav-item mt-1">
         <p class="text-secondary pt-2 pr-2"><%= current_user.email.split('@')[0].capitalize %></p>
        </li>


          <li class="nav-item mt-1">
            <%= link_to "Log Out", destroy_user_session_path, class: 'nav-link', method: :delete %>
          </li>





          <form class="form-inline my-2 my-lg-0" action="/search">
              <input class="form-control mr-sm-2" name="q" type="search" placeholder="Search" aria-label="Search">
              <button class="btn btn-outline-success my-2 btn-sm" type="submit">Search</button>
            </form>

        <% else %>

          <li class="nav-item">
            <%= link_to "Sign In", new_user_session_path, class: 'nav-link' %>
          </li>

          <li class="nav-item">
            <%= link_to "Create an Account", new_user_registration_path, class: 'btn btn-primary ' %>
          </li>




        <% end %>

    </ul>
  </div>
</div>
<!--Flash Message -->
 <% flash.each do |name, message| %>
    <%= content_tag(:div, message, class: "alert alert-info #{name}") %>
 <% end %>

<div class="container">
    <%= yield %>
</div>

<footer class="small text-muted ">
       <hr>
       <center>
         <i class="fa fa-instagram space" style="font-size:20px"></i>
         <i class="fa fa-facebook-official space" style="font-size:20px"></i>
         <i class="fa fa-twitter space" style="font-size:20px"></i>
         <i class="fa fa-github space" style="font-size:20px"></i>
         <i class="fa fa-youtube space" style="font-size:20px;"></i>
         <i class="fa fa-google-plus space" style="font-size:20px"></i>
          <br>
            <br>

         <p>Â© 2020 Aditya Rocks</p>

       </center>

   </footer>
  </body>
